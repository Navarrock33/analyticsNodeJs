doctype html
html(lang='en')
  head
    // Librerias de meterializecss
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title #{title}
  body
    .row  
      h1.center #{h1Text}
      .col.s12.m4.offset-m4
        form(method='POST', action=formAction)
          .input-field
            i.material-icons.prefix.pt-5 email
            input#email(type='email', name='email')
            label.center-align(for='email') Email
          .input-field
            i.material-icons.prefix.pt-5 lock_outline
            input#password(type='password', name='password')
            label(for='password') Contrase√±a
          .input-field
            button.light-blue.darken-3.col.s12.btn.waves-effect.waves-light(type='submit') #{btnText}
              